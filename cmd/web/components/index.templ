package components

templ Index_Head() {
	<title>Index Head</title>
	<script src="assets/js/index.js"></script>
	@LogoAnimationHead()
}

templ Index() {
	@Base(Index_Head()) {
		@LogoAnimation()
		@Header("","")
		@Hero()
		@Body()
	}
}

templ Hero() {
}

templ Body() {
}

